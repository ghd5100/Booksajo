<?xml version="1.0" encoding="UTF-8"?>
<!DOCTYPE mapper
    PUBLIC "-//mybatis.org//DTD Mapper 3.0//EN"
    "http://mybatis.org/dtd/mybatis-3-mapper.dtd">


<mapper namespace="com.tech.booksajo.notice.mapper.NoticeMapper">
	<select id="getList" resultType="com.tech.booksajo.notice.vo.NoticeDto">
		SELECT NSEQ,NTITLE,NCONTENT,NDATE,NHIT
		FROM BSJNOTICE
	</select>
	
	<select id="contentView" resultType="com.tech.booksajo.notice.vo.NoticeDto">
		SELECT NSEQ,NTITLE,NCONTENT,NDATE,NHIT
		FROM BSJNOTICE WHERE NSEQ=#{param1}
	</select>
	
	<update id="upHit">
		UPDATE BSJNOTICE
		SET NHIT=NHIT+1 WHERE NSEQ=#{param1}
	</update>
		
</mapper>